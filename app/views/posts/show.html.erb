<%- model_class = Post -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @post.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:text) %>:</strong></dt>
  <dd><%= @post.text %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image) %>:</strong></dt>
  <dd><%= image_tag @post.avatar.url(:medium) %></dd>
</dl>
<h2>Add a comment:</h2>
<%= render @post.comments %>
<%= render 'comments/form' %>
<div class="vote_count">
  <p>Nombre de like : <%= @post.get_likes.size %></p>

</div>
<div class="votes">
  <% if !current_user.liked? @post %>
      <%= link_to 'like post', like_post_path(@post), method: :put ,remote: true, class:'like_post'%>
  <% end %>
</div>

<% if can? :crud, @post %>
    <%= link_to t('.back', :default => t("helpers.links.back")),
              posts_path, :class => 'btn btn-default'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_post_path(@post), :class => 'btn btn-default btn-xs' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                post_path(@post),
                :method => :delete,
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-xs btn-danger' %>
<% end %>

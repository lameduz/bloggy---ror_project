<%= form_for @post, :html => { :class => "form-horizontal post" } do |f| %>



  <div class="form-group">
    <%= f.label :title, "Titre",:class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => 'form-control' %>
      <%=f.error_span(:title) %>
    </div>
  </div>
    <div class="form-group">
      <%= f.label :tag_list, "Tags", :class => 'control-label col-lg-2' %><br />
      <div class="col-lg-10">
      <%= f.text_field :tag_list, :class => 'form-control' %>
      <%=f.error_span(:tag_list) %>
      </div>
    </div>
  <div class="form-group">
    <%= f.label :text,"Description", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :text, :class => 'form-control' %>
    </div>
    <%=f.error_span(:text) %>
  </div>
  <div class="form-group">
    <%= f.label :avatar,"Photographie", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.file_field :avatar, as: :file , :class => 'form-control' %>
      <%=f.error_span(:avatar) %>
    </div>
  </div>


  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                posts_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
